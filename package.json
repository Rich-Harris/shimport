{
  "name": "shimport",
  "description": "Shim for dynamic import()",
  "version": "2.0.4",
  "repository": "Rich-Harris/shimport",
  "main": "index.js",
  "files": [
    "index.js",
    "index.dev.js"
  ],
  "devDependencies": {
    "@rollup/plugin-replace": "^2.3.3",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.1",
    "kleur": "^4.1.1",
    "locate-character": "^2.0.5",
    "pretty-ms": "^7.0.0",
    "rollup": "^2.27.1",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.6",
    "sucrase": "^3.15.0",
    "surge": "^0.21.6",
    "typescript": "^4.0.3",
    "uvu": "^0.3.3"
  },
  "scripts": {
    "dev": "rollup -cw",
    "build": "rollup -c",
    "test": "uvu -r sucrase/register/ts test test.ts",
